<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
       <variable
           name="isLoading"
           type="boolean" />
        <import type="android.view.View"/>

        <variable
            name="imagePathUrl"
            type="String" />

        <variable
            name="movieName"
            type="String" />

        <variable
            name="Network"
            type="String" />

        <variable
            name="TVShowStarted"
            type="String" />

        <variable
            name="TVShowstatus"
            type="String" />

        <variable
            name="description"
            type="String" />

        <variable
            name="rating"
            type="String" />
        <variable
            name="genre"
            type="String" />
        <variable
            name="runtime"
            type="String" />

    </data>



    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        tools:context=".TVShowDetails"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/imageslider"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/backbutton"
                    android:layout_width="25sp"
                    android:layout_height="25sp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/backbutton_bg"
                    android:src="@drawable/ic_baseline_arrow_back_24"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/fadingedge"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@drawable/imageslider_bg"
                    app:layout_constraintBottom_toBottomOf="@+id/imageslider" />

                <LinearLayout
                    android:id="@+id/imagesliderindicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="end"
                    android:orientation="horizontal"
                    android:padding="8dp"

                    app:layout_constraintBottom_toBottomOf="@+id/fadingedge" />

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/TVShowImage"
                    android:layout_width="150dp"
                    android:layout_height="200dp"
                    android:layout_marginStart="10dp"
                    android:scaleType="centerCrop"
                    app:layout_constraintBottom_toBottomOf="@+id/imageslider"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/imageslider"
                    app:riv_corner_radius="8dp"
                    bind:imageURL="@{imagePathUrl}" />

                <TextView
                    android:id="@+id/TVShowNameTV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/ubuntu_bold"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:text="@{movieName}"
                    android:textColor="@color/colorTextPrimary"
                    android:textSize="16sp"
                    app:layout_constraintBottom_toBottomOf="@+id/TVShowImage"
                    app:layout_constraintStart_toEndOf="@+id/TVShowImage"
                    app:layout_constraintTop_toTopOf="@+id/TVShowImage"
                    tools:text="Friends" />

                <TextView
                    android:id="@+id/TVShowNetwork"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="0dp"
                    android:ellipsize="end"
                    android:layout_marginStart="8dp"
                    android:fontFamily="@font/ubuntu_regular"
                    android:includeFontPadding="false"
                    android:maxLines="1"
                    android:text="@{Network}"
                    android:textColor="@color/colorTextOther"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/TVShowImage"
                    app:layout_constraintStart_toEndOf="@+id/TVShowImage"
                    app:layout_constraintTop_toBottomOf="@+id/TVShowNameTV"
                    app:layout_constraintVertical_bias="0.135"
                    tools:Text="Friends"
                    tools:text="Friends" />


                <TextView
                    android:id="@+id/tvshowStarted"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/ubuntu_regular"

                    android:includeFontPadding="false"

                    android:text="@{TVShowStarted}"
                    android:textColor="@color/colorTextSecondary"
                    android:textSize="12sp"
                    app:layout_constraintBottom_toBottomOf="@+id/TVShowImage"
                    app:layout_constraintStart_toEndOf="@+id/TVShowImage"
                    app:layout_constraintTop_toBottomOf="@id/TVShowNetwork"
                    app:layout_constraintVertical_bias="0.061"
                    tools:text="Friends" />

                <TextView
                    android:id="@+id/tvshowStatus"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="4dp"

                    android:fontFamily="@font/ubuntu_regular"
                    android:includeFontPadding="false"

                    android:text="@{TVShowstatus}"
                    android:textColor="@android:color/holo_green_light"
                    android:textSize="12sp"
                    app:layout_constraintStart_toEndOf="@id/TVShowImage"

                    app:layout_constraintTop_toBottomOf="@id/tvshowStarted"
                    tools:text="Friends" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/ubuntu_regular"
                    android:includeFontPadding="false"
                    android:lineSpacingExtra="2dp"
                    android:maxLines="6"
                    android:id="@+id/TVShowDescription"
                    android:text="@{description}"
                    android:textColor="@color/colorTextIcons"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/TVShowImage" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorTextOther"
                    android:id="@+id/ReadMore"
                    android:text="Read More"
                    android:textSize="14sp"
                    android:visibility="gone"
                    android:includeFontPadding="false"
                    android:fontFamily="@font/ubuntu_regular"
                    android:layout_marginTop="3dp"
                    app:layout_constraintStart_toStartOf="@+id/TVShowDescription"
                    app:layout_constraintTop_toBottomOf="@+id/TVShowDescription"/>
                
                
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/ReadMore"
                    android:layout_marginTop="14dp"
                    app:dividerInsetStart="10dp"
                    app:dividerInsetEnd="10dp"
                    app:dividerThickness="2dp"
                    android:visibility="gone"
                    app:dividerColor="@color/colorTextSecondary"
                    android:id="@+id/divider1"/>
                
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/divider1"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="10dp"
                    android:layout_marginStart="10dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="4dp"
                    android:id="@+id/infolayout"
                    android:visibility="gone"
                    android:gravity="center">

                     <ImageView
                        android:layout_width="50sp"
                         android:id="@+id/star"
                        android:layout_height="50sp"
                         android:src="@drawable/ic_baseline_star_24"
                         app:tint="@color/colorTextOther" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TVShowRating"
                        android:text="@{rating}"
                        android:textSize="26sp"
                        tools:text="9.5"
                        android:fontFamily="@font/ubuntu_bold"
                        android:layout_marginStart="5dp"
                        android:layout_weight="1"
                        android:textColor="@color/colorAccent"/>




                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TVShowgenre"
                        android:text="@{genre}"
                        android:textSize="26sp"
                        tools:text="Crime"
                             android:layout_weight="1"
                        android:fontFamily="@font/ubuntu_bold"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/colorAccent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/TVShowRunTime"
                        android:text="@{runtime}"
                        android:textSize="26sp"
                        tools:text="60min"
                         android:layout_weight="1"
                        android:fontFamily="@font/ubuntu_bold"
                        android:layout_marginStart="8dp"
                        android:textColor="@color/colorAccent"/>


                </LinearLayout>
                <com.google.android.material.divider.MaterialDivider
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:layout_constraintTop_toBottomOf="@+id/infolayout"
                    android:layout_marginTop="4dp"
                    app:dividerInsetStart="10dp"
                    app:dividerInsetEnd="10dp"
                    app:dividerThickness="2dp"
                    app:dividerColor="@color/colorTextSecondary"
                    android:id="@+id/divider2"/>
                
                
                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonWebsite"
                    android:fontFamily="@font/ubuntu_medium"
                    android:text="Website"
                    android:visibility="gone"
                    android:textSize="16sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/divider2"
                    app:layout_constraintEnd_toStartOf="@+id/buttonEpisodes"
                    android:background="@color/colorAccent"
                    app:backgroundTint="@color/colorAccent"

                    android:layout_margin="8dp"
                    app:cornerRadius="20dp"/>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:id="@+id/buttonEpisodes"
                    android:fontFamily="@font/ubuntu_medium"
                    android:text="Episodes"
                    android:textSize="16sp"
                    app:layout_constraintStart_toEndOf="@id/buttonWebsite"
                    app:layout_constraintTop_toBottomOf="@id/divider2"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:background="@color/colorTextOther"
                    app:backgroundTint="@color/colorTextOther"

                    android:layout_margin="8dp"
                    app:cornerRadius="20dp"/>




            </androidx.constraintlayout.widget.ConstraintLayout>


        </ScrollView>


        <ProgressBar
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:visibility="@{isLoading?View.VISIBLE:View.GONE,default=gone}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="20dp"
            android:layout_marginBottom="20dp"
            android:id="@+id/addtowatchlist"
            android:background="@drawable/fab_bg"
            android:src="@drawable/ic_watchlist"
            android:backgroundTint="@color/colorThemeExtra"
           android:visibility="gone"


            />



    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>