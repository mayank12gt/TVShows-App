<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    xmlns:bind="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="TVShow"
            type="com.example.tvshows.models.TvShow" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="4dp">



        <View
            android:id="@+id/viewsupporter"
            android:layout_width="wrap_content"
            android:layout_height="10dp"
            app:layout_constraintStart_toStartOf="@+id/tvshowbg"
            app:layout_constraintTop_toBottomOf="@id/imageTVShow" />

        <View
            android:id="@+id/tvshowbg"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="@drawable/background_tvshow"
            app:layout_constraintBottom_toBottomOf="parent"

            android:paddingBottom="10dp"
            app:layout_constraintTop_toTopOf="@id/tvshowname"
            />

        <com.makeramen.roundedimageview.RoundedImageView
            android:id="@+id/imageTVShow"
            android:layout_width="70dp"
            android:layout_height="100dp"
            android:layout_marginStart="10dp"
            android:scaleType="centerCrop"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:riv_corner_radius="4dp"
            bind:imageURL="@{TVShow.thumbnail}"
            tools:src="@drawable/ic_baseline_person_24" />

        <TextView
            android:id="@+id/tvshowname"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="8dp"
            android:text="@{TVShow.name}"
            android:fontFamily="@font/ubuntu_medium"
            android:includeFontPadding="false"
            android:paddingTop="8dp"
            android:textColor="@color/colorTextPrimary"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/imageTVShow"
            app:layout_constraintTop_toTopOf="@id/imageTVShow"
            tools:text="Friends" />

        <TextView
            android:id="@+id/tvshowNetwork"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:text="@{TVShow.network}"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/ubuntu_regular"

            android:includeFontPadding="false"
            android:textSize="12sp"
            android:textColor="@color/colorTextOther"
            tools:text="Friends"
            app:layout_constraintEnd_toEndOf="@id/tvshowname"
            app:layout_constraintStart_toStartOf="@id/tvshowname"
            app:layout_constraintTop_toBottomOf="@id/tvshowname" />

        <TextView
            android:id="@+id/tvshowStarted"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text='@{"Started on "+TVShow.startdate}'
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/ubuntu_regular"

            android:includeFontPadding="false"
            android:textSize="12sp"
            android:textColor="@color/colorTextSecondary"
            tools:text="Friends"
            app:layout_constraintEnd_toEndOf="@id/tvshowname"
            app:layout_constraintStart_toStartOf="@id/tvshowname"
            app:layout_constraintTop_toBottomOf="@id/tvshowNetwork" />


        <TextView
            android:id="@+id/tvshowStatus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="3dp"
            android:layout_marginEnd="8dp"
            android:fontFamily="@font/ubuntu_regular"
            android:text="@{TVShow.status}"

            android:includeFontPadding="false"
            android:textSize="12sp"
            android:textColor="@android:color/holo_green_light"
            tools:text="Friends"
            app:layout_constraintEnd_toEndOf="@id/tvshowname"
            app:layout_constraintStart_toStartOf="@id/tvshowname"
            app:layout_constraintTop_toBottomOf="@id/tvshowStarted" />

        <com.makeramen.roundedimageview.RoundedImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/delete"
            app:riv_corner_radius="4dp"
            android:src="@drawable/ic_baseline_delete_forever_24"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="4dp"
            android:background="@android:color/holo_red_light"
            android:layout_marginBottom="8dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>